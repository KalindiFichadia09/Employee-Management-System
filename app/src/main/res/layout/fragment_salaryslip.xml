<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".salaryslip">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:background="#E6E1E1">

                    <TextView
                        android:text="Sr No"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Employee Id"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Month"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="PayScale(Duration)"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Basic Pay"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Allowance"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Deduction"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Adjustment"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Total Amount"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Action"
                        style="@style/txt_tbl_heading"/>

                </TableRow>

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:background="#858383" />

                <TableRow>

                    <TextView
                        android:text="1"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="21AFPL101"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="January-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="30 Days"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 12000"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 400"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 200"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 100"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 12700"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="Paid"
                        android:textColor="#5ED663"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="2"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="21AFPL101"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="February-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="30 Days"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 12000"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 400"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 200"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 100"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="₹ 12700"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="Paid"
                        android:textColor="#5ED663"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>