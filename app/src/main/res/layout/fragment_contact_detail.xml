<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Address : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="1807 Holden Street San Diego, CA"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="City : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="Mumbai"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ct"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="State : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="Maharashtra"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/st"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Country : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="India"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/con"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Pin Code : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="310004"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pin"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Emergency no : "/>

                    <TextView
                        style="@style/txt_ans_pro_detail"
                        android:text="+91 9988446655"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>