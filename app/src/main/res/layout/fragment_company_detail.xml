<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/eid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Employee Id: "/>

                    <TextView
                        android:id="@+id/Emp_Id"
                        style="@style/txt_ans_pro_detail" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deptnm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eid"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Department Name : "/>

                    <TextView
                        android:id="@+id/Emp_Department"
                        style="@style/txt_ans_pro_detail" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yoj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/deptnm"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Year of Joining : "/>

                    <TextView
                        android:id="@+id/Emp_Join_Date"
                        style="@style/txt_ans_pro_detail" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/yoj"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Company Email : "/>

                    <TextView
                        android:id="@+id/Emp_Companu_Email"
                        style="@style/txt_ans_pro_detail" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jobt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cemail"
                    tools:ignore="MissingConstraints">

                    <TextView
                        style="@style/txt_heading_pro_detail"
                        android:text="Job Type : "/>

                    <TextView
                        android:id="@+id/Emp_Job_Type"
                        style="@style/txt_ans_pro_detail" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>