<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".working_hour">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:background="#E6E1E1">

                    <TextView
                        android:text="Sr No"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Month"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Allocated Hour"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Filled Hour"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Remaining"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Leave"
                        style="@style/txt_tbl_heading"/>

                    <TextView
                        android:text="Attendance in Percentage"
                        style="@style/txt_tbl_heading"/>

                </TableRow>

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:background="#858383" />

                <TableRow>

                    <TextView
                        android:text="1"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="January-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="160"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="110"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="25"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="16"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="94.37%"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="2"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="February-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="160"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="118"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="25"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="8"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="94.37%"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="3"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="March-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="160"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="110"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="25"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="16"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="94.37%"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="4"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="April-2024"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="160"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="110"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="25"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="16"
                        style="@style/txt_tbl_ans"/>

                    <TextView
                        android:text="94.37%"
                        style="@style/txt_tbl_ans"/>

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>