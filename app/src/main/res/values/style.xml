<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txt_heading_pro_detail">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black_heading</item>
        <item name="android:fontFamily">@font/font_txt_heading</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_ans_pro_detail">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_tbl_heading">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black_heading</item>
        <item name="android:fontFamily">@font/font_txt_heading</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_tbl_ans">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>

